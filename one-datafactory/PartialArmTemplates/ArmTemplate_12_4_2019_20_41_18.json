							}
						},
						"inputs": [
							{
								"referenceName": "DS_SHELL_POC_LOYALTY_ADLS_SRC_SHELL",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DS_SHELL_POC_LOYALTY_HANA_TRG_SHELL",
								"type": "DatasetReference"
							}
						]
					}
				],
				"folder": {
					"name": "ONE_SHELL_POC"
				},
				"annotations": []
			},
			"dependsOn": []
